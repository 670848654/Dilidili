<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 条件筛选 -->
    <shortcut
        android:shortcutId="tag"
        android:enabled="true"
        android:icon="@drawable/heart"
        android:shortcutShortLabel="@string/tagShortName"
        android:shortcutLongLabel="@string/tagLongName"
        android:shortcutDisabledMessage="@string/disableMsg">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="anime.project.DiliDili"
            android:targetClass="anime.project.dilidili.main.tag.TagActivity" />
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>
    <!-- 我收藏的番剧 -->
